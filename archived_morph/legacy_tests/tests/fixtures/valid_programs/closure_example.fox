# Contoh penggunaan closure di MORPH

fungsi buatPenghitung() maka
    biar hitung = 0
    fungsi penghitung() maka
        hitung = hitung + 1
        kembalikan hitung
    akhir
    kembalikan penghitung
akhir

biar p1 = buatPenghitung()
tulis(p1()) # 1
tulis(p1()) # 2

biar p2 = buatPenghitung()
tulis(p2()) # 1
tulis(p1()) # 3
