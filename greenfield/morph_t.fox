    biar k = {}
    ubah k["kelas"] = KELAS
    ubah k["warisi"] = WARISI
    ubah k["ini"] = INI
    ubah k["induk"] = INDUK
    ubah k["tipe"] = TIPE
    ubah k["biar"] = BIAR
    ubah k["tetap"] = TETAP
    ubah k["ubah"] = UBAH
    ubah k["fungsi"] = FUNGSI
    ubah k["kembali"] = KEMBALI
    ubah k["kembalikan"] = KEMBALIKAN
    ubah k["jika"] = JIKA
    ubah k["maka"] = MAKA
    ubah k["lain"] = LAIN
    ubah k["lainjika"] = LAIN_JIKA
    ubah k["selama"] = SELAMA
    ubah k["pilih"] = PILIH
    ubah k["ketika"] = KETIKA
    ubah k["lainnya"] = LAINNYA
    ubah k["berhenti"] = BERHENTI
    ubah k["lanjutkan"] = LANJUTKAN
    ubah k["akhir"] = AKHIR
    ubah k["jodohkan"] = JODOHKAN
    ubah k["dengan"] = DENGAN
    ubah k["jaga"] = JAGA
    ubah k["ambil"] = AMBIL
    ubah k["tulis"] = TULIS
    ubah k["pinjam"] = PINJAM
    ubah k["ambil_semua"] = AMBIL_SEMUA
    ubah k["ambil_sebagian"] = AMBIL_SEBAGIAN
    ubah k["dari"] = DARI
    ubah k["sebagai"] = SEBAGAI
    ubah k["benar"] = BENAR
    ubah k["salah"] = SALAH
    ubah k["nil"] = NIL
    ubah k["dan"] = DAN
    ubah k["atau"] = ATAU
    ubah k["tidak"] = TIDAK
    ubah k["asink"] = ASINK
    ubah k["tunggu"] = TUNGGU
    ubah k["aot"] = AOT
    ubah k["coba"] = COBA
    ubah k["tangkap"] = TANGKAP
    ubah k["akhirnya"] = AKHIRNYA
    ubah k["lemparkan"] = LEMPARKAN
    ubah k["jenis"] = JENIS
    ubah k["warnai"] = WARNAI
    kembali k
akhir

biar KATA_KUNCI = buat_peta_keyword()

fungsi cari_keyword(ident) maka
    jika KATA_KUNCI.punya(ident) maka
        kembali KATA_KUNCI[ident]
    lain
        kembali NAMA
    akhir
akhir
