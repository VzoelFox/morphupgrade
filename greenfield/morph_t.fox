# Lain-lain
biar AKHIR_BARIS = "AKHIR_BARIS"
biar TIDAK_DIKENAL = "TIDAK_DIKENAL"

kelas Token maka
    fungsi inisiasi(tipe_token, nilai, baris, kolom) maka
        ubah ini.tipe = tipe_token
        ubah ini.nilai = nilai
        ubah ini.baris = baris
        ubah ini.kolom = kolom
    akhir
akhir

# Membuat pemetaan dari kata kunci string ke TipeToken
# Menggunakan fungsi pembantu dan 'ubah' untuk assignment
