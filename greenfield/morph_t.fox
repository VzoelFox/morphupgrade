# core/morph_t.fox
# Fondasi untuk "Kelahiran Kembali MORPH"
# Mendefinisikan struktur data Token dan tipe-tipe token.

# Penanda Akhir File
biar ADS = "ADS" # Akhir Dari Segalanya

# Tipe Literal
biar TEKS = "TEKS"
biar ANGKA = "ANGKA"
biar NAMA = "NAMA"

# Operator Aritmatika
biar TAMBAH = "TAMBAH"        # +
biar KURANG = "KURANG"        # -
biar KALI = "KALI"            # *
biar BAGI = "BAGI"            # /
biar PANGKAT = "PANGKAT"      # ^ (Akan diubah menjadi BIT_XOR di Greenfield)
biar MODULO = "MODULO"        # %

# Operator Bitwise (Self-Hosted Definitions)
biar BIT_AND = "BIT_AND"      # &
biar BIT_OR = "BIT_OR"        # |
biar BIT_XOR = "BIT_XOR"      # ^ (Sebelumnya PANGKAT, sekarang shared/overloaded atau replaced?)
                              # Untuk konsistensi dengan transisi/lx.py, ^ adalah BIT_XOR.
biar BIT_NOT = "BIT_NOT"      # ~
biar GESER_KIRI = "GESER_KIRI"   # <<
biar GESER_KANAN = "GESER_KANAN" # >>

# Operator Perbandingan
biar SAMA_DENGAN = "SAMA_DENGAN"   # ==
biar TIDAK_SAMA = "TIDAK_SAMA"     # !=
biar KURANG_DARI = "KURANG_DARI"   # <
biar LEBIH_DARI = "LEBIH_DARI"     # >
biar KURANG_SAMA = "KURANG_SAMA"   # <=
biar LEBIH_SAMA = "LEBIH_SAMA"     # >=

# Operator Logika
biar DAN = "DAN"           # dan
biar ATAU = "ATAU"         # atau
biar TIDAK = "TIDAK"       # tidak

# Tanda Baca & Simbol
biar TITIK_KOMA = "TITIK_KOMA"    # ;
biar KOMA = "KOMA"                # ,
biar TITIK_DUA = "TITIK_DUA"      # :
biar TITIK = "TITIK"              # .
biar TITIK_TIGA = "TITIK_TIGA"    # ...
biar TANDA_PANAH = "TANDA_PANAH"  # ->

biar KURUNG_BUKA = "KURUNG_BUKA"   # (
biar KURUNG_TUTUP = "KURUNG_TUTUP" # )
biar KURAWAL_BUKA = "KURAWAL_BUKA" # {
biar KURAWAL_TUTUP = "KURAWAL_TUTUP" # }
biar SIKU_BUKA = "SIKU_BUKA"       # [
biar SIKU_TUTUP = "SIKU_TUTUP"     # ]
biar GARIS_PEMISAH = "GARIS_PEMISAH" # | (Deprecated in parser, alias BIT_OR in lexer context?)
biar TANYA = "TANYA"                 # ?

# Penugasan
biar SAMADENGAN = "SAMADENGAN"    # =

